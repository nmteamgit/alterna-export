<div class='logo'>
  <%= image_tag 'logo.png'%>
</div>
<div class='login-header'>
  <h1 class="login-header-content">API Dashboard</h1>
</div>
<%= render "devise/shared/flash_messages" %>
<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
    <div class="form-group">
      <%= f.label :email, 'Username:', class: 'col-sm-5 control-label' %>
      <div class="col-sm-3">
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, 'Password:', class: 'col-sm-5 control-label' %>
      <div class="col-sm-3">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-5">
          <%= f.submit "Login", class: 'btn btn-light login-button' %>
      </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-5 link">
            <%= render "devise/shared/links" %>
        </div>
    </div>
  <% end %>
</div>
