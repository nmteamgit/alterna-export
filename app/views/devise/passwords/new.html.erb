<div class='logo'>
  <%= image_tag 'logo.png'%>
</div>
<div class='login-header'>
  <h1 class="login-header-content">Forgot your password?</h1>
</div>
<%= render "devise/shared/flash_messages" %>
<div class="container">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "col-sm-5 control-label" %>
      <div class="col-sm-3">
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-5">
          <%= f.submit "Send me reset password instructions", class: "btn btn-light" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-5 link">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>
</div>
